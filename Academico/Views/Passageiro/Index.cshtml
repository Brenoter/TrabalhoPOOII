@model IEnumerable<Academico.Models.Passageiro>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Passageiros</h1>

<p>
    <a asp-action="Create">Registrar Novo Passageiro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Viacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Instituicao.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PassageiroID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PassageiroID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PassageiroID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
